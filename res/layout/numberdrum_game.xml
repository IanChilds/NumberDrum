<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <Chronometer
            android:id="@+id/timer"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
    <TextView
            android:id="@+id/equation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer"
            android:textSize="30dp"
            android:text="Hello World, MainMenu"
            />
    <LinearLayout
            android:id="@+id/num_row1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/equation"
            android:layout_centerHorizontal="true">
        <Button
                android:id="@+id/num1"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="Num1"
                android:onClick="numberPressed"/>
        <Button
                android:id="@+id/num6"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="Num6"
                android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/num_row2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@id/num_row1"
            android:layout_centerHorizontal="true">
        <Button
                android:id="@+id/num2"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:text="Num2"
                android:layout_gravity="center"
                android:onClick="numberPressed"/>
        <Button
                android:id="@+id/target_num"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                android:text="TARGET"
                android:onClick="submitAnswer"/>
        <Button
                android:id="@+id/num5"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Num5"
                android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/num_row3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/num_row2"
            android:layout_centerHorizontal="true">
        <Button
                android:id="@+id/num3"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="Num3"
                android:onClick="numberPressed"/>
        <Button
                android:id="@+id/num4"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="Num4"
                android:onClick="numberPressed"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/bodmas_row"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/num_row3"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">
        <Button
                android:id="@+id/add"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="+"
                android:onClick="operatorPressed"/>
        <Button
                android:id="@+id/subtract"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="-"
                android:onClick="operatorPressed"/>
        <Button
                android:id="@+id/multiply"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="*"
                android:onClick="operatorPressed"/>
        <Button
                android:id="@+id/divide"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="/"
                android:onClick="operatorPressed"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/brackets_row"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_below="@id/bodmas_row">
        <Button
                android:id="@+id/left_bracket"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="("
                android:onClick="leftBracketPressed"/>
        <Button
                android:id="@+id/right_bracket"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text=")"
                android:onClick="rightBracketPressed"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/bottom_row"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/hint"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="Hint"
                android:onClick="giveHint"/>
        <Button
                android:id="@+id/reset"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="Reset"
                android:onClick="resetGame"/>
        <Button
                android:id="@+id/new_game"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="New Game"
                android:onClick="startNewGame"/>
    </LinearLayout>
</RelativeLayout>